{{!
    @template format_autocurriculum/course

    Course format template for AutoCurriculum.

    Available context:
    - course: Course object
    - sections: Array of sections
}}
<div class="course-content">
    {{#sections}}
        <div class="section">
            <h3>{{name}}</h3>
            {{#summary}}
                <div class="summary">{{{summary}}}</div>
            {{/summary}}
            {{#generatedlab}}
                <div class="generated-lab">
                    <h4>{{#str}}generatedlab, format_autocurriculum{{/str}}</h4>
                    <p>{{content}}</p>
                    <small>{{#str}}created{{/str}}: {{timecreated}}</small>
                </div>
            {{/generatedlab}}
            {{#modules}}
                <div class="module">
                    <a href="{{url}}">{{name}}</a>
                </div>
            {{/modules}}
        </div>
    {{/sections}}
</div>