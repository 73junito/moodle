<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/virtualgarage_steps/db" VERSION="2025112700" COMMENT="Virtual Garage Steps plugin"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">

  <TABLES>

    <TABLE NAME="virtualgarage_scenarios" COMMENT="Stored scenario definitions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="scenarioid" TYPE="char" LENGTH="64" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="title" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="json" TYPE="text" NOTNULL="true"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="virtualgarage_steps" COMMENT="Individual steps per scenario">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="scenarioid" TYPE="char" LENGTH="64" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="stepid" TYPE="char" LENGTH="64" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="description" TYPE="text" NOTNULL="true"/>
        <FIELD NAME="weight" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="required" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

  </TABLES>
</XMLDB>